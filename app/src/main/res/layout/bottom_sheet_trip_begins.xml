<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:showIn="@layout/activity_motor_trip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/vehicle_type_item_shape"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <com.oway.customviews.CustomTextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/dist" />

                        <com.oway.customviews.CustomTextView
                            android:id="@+id/tvDescription"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/notes" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="@string/amt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:visibility="gone"
                        android:text="@string/report" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/vehicle_type_item_shape"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvCash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/cash"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/ll_below_loc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center_vertical">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/iv_driver_image_below_loc"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/food"
                    app:civ_border="true"
                    app:civ_border_color="@color/col_orange"
                    app:civ_border_width="@dimen/_2sdp" />


                <com.oway.customviews.CustomTextView
                    android:id="@+id/tv_driver_name_loc"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_toEndOf="@id/iv_driver_image_below_loc"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="@string/driver_name"
                    android:textSize="@dimen/_12sdp" />

                <com.oway.customviews.CustomTextView
                    android:id="@+id/tv_driver_car_name_loc"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_driver_name_loc"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@id/iv_driver_image_below_loc"
                    android:singleLine="true"
                    android:text="@string/driver_car"
                    android:textSize="@dimen/_10sdp" />

                <com.oway.customviews.CustomTextView
                    android:id="@+id/tvModel"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_driver_car_name_loc"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/iv_driver_image_below_loc"
                    android:singleLine="true"
                    android:text="@string/got_driver"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/civ_help_alart"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_toEndOf="@+id/tv_driver_car_name_loc"
                    android:background="@drawable/help_light" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
